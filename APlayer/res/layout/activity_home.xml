<?xml version="1.0" encoding="utf-8"?>
<!-- A SlidingPaneLayout is intended to be used as the top-level content view using match_parent for both width and height 
	to consume the full space available. -->
<android.support.v4.widget.SlidingPaneLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/sliding_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="android.audio.player.HomeActivity">
	<!-- android:layout_gravity="start" tells SlidingPaneLayout to treat this as a sliding Pane on the left side for left-to-right 
		languages and on the right side for right-to-left languages. If you're not building against API 17 or higher, use android:layout_gravity="left" 
		instead. -->
	<!-- The drawer is given a fixed width in dp and extends the full height of the container. -->
	<fragment
		android:id="@+id/sliding_pane"
		android:name="android.audio.player.SlidingPaneFragment"
		android:layout_width="@dimen/sliding_pane_width"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		tools:layout="@layout/fragment_sliding_pane" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<!-- As the main content view, the view below consumes the entire space available using match_parent in both dimensions. -->
		<FrameLayout
			android:id="@+id/container"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1" />
		<include
			layout="@layout/audio_player"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>
</android.support.v4.widget.SlidingPaneLayout>